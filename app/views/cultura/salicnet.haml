		%input{name: "bok", type: 'hidden', value: "OK" }
		%input{name: "nmgp_opcao", type: 'hidden', value: "alterar" }
		%input{name: "nmgp_ancora", type: 'hidden', value: "" }
		%input{name: "nmgp_num_form", type: 'hidden', value: "" }
		%input{name: "nmgp_parms", type: 'hidden', value: "" }
		%input{name: "script_case_init", type: 'hidden', value: 1 }
		%input{name: "nomeprojeto", type: 'hidden', value: ""}
		%input{name: "nomeprojeto_autocomp", type: 'hidden', value: ""}

	:javascript
		document.getElementById("post").submit();