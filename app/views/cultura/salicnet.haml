%html
	%head
		%title= "SalicNet ##{@numero} "
%body{style:"margin:0px; height:100%"}
	%iframe#salic{style:"width:100%; height:100%; border:0px"}
	%form#post{action: "http://sistemas.cultura.gov.br/salicnet/ctrDadosBasicosProjeto/ctrDadosBasicosProjeto.php", method: "post", target: "salic"}
		%input{name: "nrprojeto", type: "hidden", value: @numero}
